<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.noptien.UpdateNopTien"
            prefWidth="500.0" prefHeight="400.0" styleClass="pane">
    <children>

        <Label layoutX="30.0" layoutY="30.0" text="Tên người nộp:" />
        <Label fx:id="lblTenNguoi" layoutX="150.0" layoutY="30.0" />

        <Label layoutX="30.0" layoutY="70.0" text="Tên khoản thu:" />
        <Label fx:id="lblTenKhoanThu" layoutX="150.0" layoutY="70.0" />

        <Label layoutX="30.0" layoutY="110.0" text="Ngày thu:" />
        <DatePicker fx:id="dpNgayThu" layoutX="150.0" layoutY="105.0" />

        <Label text="Số tiền cần nộp:" layoutX="50.0" layoutY="220.0" />
        <Label fx:id="lblSoTienCanNop" layoutX="200.0" layoutY="220.0"
               style="-fx-font-weight: bold;" />

        <Label layoutX="30.0" layoutY="150.0" text="Số tiền đã nộp:" />
        <TextField fx:id="tfSoTien" layoutX="150.0" layoutY="145.0" prefWidth="200.0" />

        <Label layoutX="30.0" layoutY="190.0" text="Trạng thái:" />
        <ComboBox fx:id="cbTrangThai" layoutX="150.0" layoutY="185.0" prefWidth="200.0" />

        <Button text="Lưu" onAction="#handleUpdate"
                layoutX="150.0" layoutY="240.0" prefWidth="100.0"
                styleClass="button1" />

<!--        <Button text="Hủy" onAction="#handleCancel"-->
<!--                layoutX="270.0" layoutY="240.0" prefWidth="100.0"-->
<!--                styleClass="button2" />-->

    </children>
</AnchorPane>
